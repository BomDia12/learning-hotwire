<%= simple_form_for quote, html: { class: "flex justify-between min-h-max gap-2 border-b border-solid border-gray-400 px-1 py-1" } do |f| %>
     <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true, class: "bg-inherit border-0 border-b border-gray-500 focus:hover:border-0 focus:hover:border-b focus:hover:border-cyan-500 focus:outline-none focus:shadow-transparent" }, wrapper_html: { class: "flex flex-1 gap-1 items-center" } %>
  <div class="flex gap-1">
    <%= link_to "Cancel", quotes_path, class: "px-2 py-2 border border-slate-500 rounded bg-red-200 hover:bg-red-600 hover:text-white hover:border-red-600 transition-all" %>
    <%= f.submit class: "px-2 border border-slate-500 rounded bg-cyan-300 hover:bg-green-600 hover:text-white hover:border-green-600 transition-all" %>
  </div>
<% end %>